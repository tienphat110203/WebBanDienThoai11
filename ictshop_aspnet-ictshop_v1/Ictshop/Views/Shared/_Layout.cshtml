<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Điện thoại rẻ Bình Dương</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using Ictshop.Models

    <style type="text/css">
        body {
            background-color: #f5f5f5; /* Màu nền xám nhạt */
            font-family: Arial, sans-serif; /* Thay đổi font chữ */
        }

        .navbar-inverse {
            background-color: #ff6a00;
            border-color: #39B54A;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: #fff; /* Màu chữ trắng */
            font-size: 16px; /* Tăng kích thước font chữ */
        }

        .navbar-inverse .navbar-brand {
            color: #39B54A; /* Màu xanh lá cho chữ brand */
        }

        .container.body-content {
            background-color: #fff; /* Màu nền trắng cho nội dung */
            padding: 20px;
            margin-top: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Thêm hiệu ứng bóng nhẹ */
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }

        .spnoibat {
            background-color: white;
        }

            .spnoibat h3 {
                padding-left: 30px;
            }

        .giohang {
            color: white;
        }
        .product-item-container {
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }

        .product-item {
            padding: 15px;
            text-align: center;
            box-shadow: 5px 5px 10px #888888;
            border-radius:10px;
        }

            .product-item img {
                max-width: 100%;
                height: auto;
            }

    </style>



</head>

<body>

    @{ 
         var u = Session["use"] as Ictshop.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="top_header col-md-12" >

