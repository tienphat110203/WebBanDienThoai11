                            <span>LIÊN HỆ</span>

                        </a>
                    </li>
                    <li>
                        <a href="~/Views/Home/About.cshtml" title="THONGTIN">
                            @*<span><i class=" glyphicon-music "></i></span>*@
                            <span>THÔNG TIN</span>

                        </a>
                    </li>
                </ul>
            </div>

        </div>
        </div>


    <br>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <img class="img-responsive" src="~/HinhanhSP/ban2.jpg" />
        </div>
        <br />
    </div>  
